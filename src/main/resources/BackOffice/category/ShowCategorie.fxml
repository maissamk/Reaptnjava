<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.BackOffice.category.ShowCategorieController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f9f5;">

    <Label text="Détails de la Catégorie Agricole"
           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2e7d32; -fx-font-family: 'Segoe UI';"/>

    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #c8e6c9;">
        <columnConstraints>
            <ColumnConstraints prefWidth="100" halignment="RIGHT"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nom:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label fx:id="nomLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <TextArea fx:id="descLabel" editable="false" wrapText="true"
                  style="-fx-min-height: 100; -fx-background-color: white; -fx-border-color: #c8e6c9; -fx-background-radius: 5; -fx-border-radius: 5;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
</VBox>