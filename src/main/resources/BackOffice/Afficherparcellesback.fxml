<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.BackOffice.parcelles.Afficherparcellesback"
            prefWidth="1200"
            prefHeight="800"
            style="-fx-background-color: #f8f9fa;">

    <!-- Header Administratif -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Gestion des Parcelles"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button text="Actualiser"
                        fx:id="btnActualiser"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Ajouter Parcelle"
                        fx:id="btnAjouter"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Exporter CSV"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            </HBox>
        </HBox>
    </top>

    <!-- Contenu Principal -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Barre de Recherche -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField promptText="Rechercher par titre..."
                           style="-fx-pref-width: 300;"/>
                <ComboBox promptText="Filtrer par statut"/>
                <ComboBox promptText="Trier par date"/>
            </HBox>

            <!-- Tableau des Parcelles -->
            <TableView fx:id="tableParcelles" style="-fx-background-color: white;">
                <columns>
                    <TableColumn text="ID" prefWidth="50"
                                 cellValueFactory="{idParcelle}"/>
                    <TableColumn text="Titre" prefWidth="200"/>
                    <TableColumn text="Statut" prefWidth="100"/>
                    <TableColumn text="Prix (TND)" prefWidth="100"/>
                    <TableColumn text="Date CrÃ©ation" prefWidth="150"/>
                    <TableColumn text="Actions" prefWidth="150">
                        <cellFactory>
<!--                            <TableColumn fx:factory="createActionCell"/>-->
                        </cellFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>