<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f7fa;">

    <HBox alignment="CENTER" style="-fx-background-color: #4a6baf; -fx-padding: 15;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Détails de la Catégorie">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../images/category-details.png" />
                </ImageView>
            </graphic>
        </Label>
    </HBox>

    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-border-radius: 5; -fx-border-color: #ddd;">
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="150" />
                <ColumnConstraints prefWidth="300" />
            </columnConstraints>

            <Label text="ID:" style="-fx-font-weight: bold; -fx-text-fill: #4a6baf;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nom:" style="-fx-font-weight: bold; -fx-text-fill: #4a6baf;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label text="Nom de la catégorie" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #4a6baf;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea text="Description complète de la catégorie" wrapText="true" editable="false"
                      style="-fx-min-height: 100; -fx-background-color: transparent; -fx-border-color: transparent;"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>
</VBox>