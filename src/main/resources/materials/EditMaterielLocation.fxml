<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.material.EditMaterielLocationController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Edit Rental Material" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
        </columnConstraints>

        <!-- Nom -->
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <!-- Prix par jour -->
        <Label text="Prix par jour (TND):" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="prixField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <!-- Description -->
        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextArea fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <!-- Disponibilité -->
        <Label text="Disponibilité:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <CheckBox fx:id="disponibiliteCheck" selected="true" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <!-- Image -->
        <Label text="Image:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <HBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <TextField fx:id="imageField" style="-fx-pref-width: 250;" editable="false" />
            <Button text="Parcourir" onAction="#handleBrowseImage" />
        </HBox>
    </GridPane>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="saveBtn" text="Save Changes" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button fx:id="cancelBtn" text="Cancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
    </HBox>
</VBox>