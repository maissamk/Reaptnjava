<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.material.EditMaterielVenteController">

    <top>
        <HBox style="-fx-background-color: #4a6baf; -fx-padding: 15;" alignment="CENTER">
            <Label style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" text="Edit Material">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="https://cdn-icons-png.flaticon.com/512/1157/1157109.png" />
                    </ImageView>
                </graphic>
            </Label>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <GridPane style="-fx-padding: 20;" hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30" />
                    <ColumnConstraints percentWidth="70" />
                </columnConstraints>

                <!-- Name Field -->
                <Label text="Name*:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <!-- Price Field -->
                <Label text="Price (TND)*:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="prixField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <!-- Description Field -->
                <Label text="Description*:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextArea fx:id="descriptionField" wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1"
                          style="-fx-min-height: 150;" />

                <!-- Category Dropdown -->
                <Label text="Category*:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <ComboBox fx:id="categorieCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <!-- Availability Checkbox -->
                <Label text="Available:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <CheckBox fx:id="disponibiliteCheck" selected="true" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <!-- Image Path Field -->
                <Label text="Image:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <HBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <TextField fx:id="imageField" style="-fx-pref-width: 250;" editable="false" />
                    <Button text="Browse" onAction="#handleBrowseImage" />
                </HBox>
            </GridPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox style="-fx-padding: 15; -fx-spacing: 10;" alignment="CENTER_RIGHT">
            <Button fx:id="cancelBtn" text="Cancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            <Button fx:id="saveBtn" text="Save Changes" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </bottom>
</BorderPane>