<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.category.IndexCategorieController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #4a6baf; -fx-padding: 15;">
            <Label style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" text="Gestion des Catégories">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/category.png" />
                    </ImageView>
                </graphic>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter Catégorie" />
            <Button style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Matériels" onAction="#gotomaterials" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher catégories..." style="-fx-pref-width: 300;" />
                <Button onAction="#handleSearch" style="-fx-background-color: #4a6baf; -fx-text-fill: white;" text="Rechercher" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <GridPane fx:id="categoriesGrid" hgap="20" style="-fx-padding: 10;" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33" />
                        <ColumnConstraints percentWidth="33" />
                        <ColumnConstraints percentWidth="33" />
                    </columnConstraints>
                </GridPane>
            </ScrollPane>

            <Pagination fx:id="pagination" style="-fx-alignment: center; -fx-padding: 10;" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #e9e9e9; -fx-padding: 10;">
            <Label style="-fx-text-fill: #666;" text="© 2025 Gestion des Catégories" />
        </HBox>
    </bottom>
</BorderPane>