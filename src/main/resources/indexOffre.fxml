<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.indexOffreController">
    <VBox spacing="10" alignment="CENTER">
        <Label text="Available Offers" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- ListView for displaying offers -->
        <ListView fx:id="offersListView" prefHeight="400" prefWidth="600" >
            <!-- List items will be dynamically populated -->
        </ListView>

        <!-- Load more button -->
        <Button text="Load More" fx:id="loadMoreButton" onAction="#loadMoreOffers"/>
        <!-- Button to Add an Offer -->
        <Button fx:id="addOffreButton" text="Ajouter Offre" layoutX="200" layoutY="20" onAction="#handleAjouterOffre"/>
    </VBox>
</AnchorPane>
