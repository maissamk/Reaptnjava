<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FrontOffice.User.Login">

    <!-- Background Image -->
    <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@../../images/backgroundlog.jpg" />
        </image>
    </ImageView>

    <!-- Semi-transparent card -->
    <Pane layoutX="150.0" layoutY="100.0" prefHeight="400.0" prefWidth="624.0" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 20;">

        <!-- Right side with form -->
        <Pane layoutX="300.0" prefHeight="400.0" prefWidth="300.0">

            <Label layoutX="50.0" layoutY="50.0" text="Se Connecter" textFill="#4a934a">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>


            <ImageView fitHeight="25.0" fitWidth="27.0" layoutX="16.0" layoutY="101.0" opacity="0.61" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../images/emailicon.png" />
                </image>
            </ImageView>
            <TextField fx:id="emailField" layoutX="50.0" layoutY="100.0" prefWidth="200.0" promptText="Address Email" />


            <ImageView fitHeight="25.0" fitWidth="27.0" layoutX="16.0" layoutY="150.0" opacity="0.61" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../images/lock1.png" />
                </image>
            </ImageView>
            <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="150.0" prefWidth="200.0" promptText="Mot De Passe" />

            <Button layoutX="50.0" layoutY="175.0" style="-fx-background-color: transparent; -fx-text-fill: #4a934a;" text="Mot de passe oubliÃ©?" />

            <Button fx:id="loginButton" layoutX="59.0" layoutY="226.0" onAction="#userLogin" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #4a934a; -fx-text-fill: white;" text="Se Connecter" />

            <HBox alignment="CENTER" layoutX="25.0" layoutY="300.0" spacing="5.0">
                <Label text="Vous n'avez pas de compte ?" />
                <Button fx:id="CreateAcoount" onAction="#CreateAccount" style="-fx-background-color: transparent; -fx-text-fill: #4a934a;" text="Inscrivez-vous" />
            </HBox>

            <!-- OR Separator -->
            <HBox alignment="CENTER" layoutX="50.0" layoutY="330.0" prefWidth="200.0" spacing="10.0">
                <Line endX="80.0" startX="0.0" stroke="#4a934a" />
                <Label text="OU">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                <Line endX="80.0" stroke="#4a934a" />
            </HBox>

            <Button layoutX="48.0" layoutY="350.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #f5142a; -fx-text-fill: white;">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/googlelogo.png" />
                            </image>
                        </ImageView>
                        <Label text="Se Connecter avec Google" />
                    </HBox>
                </graphic>
            </Button>
        </Pane>

        <ImageView fitHeight="154.0" fitWidth="213.0" layoutX="56.0" layoutY="146.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../images/logoapp.png" />
            </image>
        </ImageView>

        <!-- Vertical separator -->
        <Separator layoutX="301.0" layoutY="91.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="2.0" style="-fx-background-color: #4a934a;" />
    </Pane>
</AnchorPane>