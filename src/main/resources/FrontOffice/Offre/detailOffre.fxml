<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="789.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.FrontOffice.Offer.detailOffreController" stylesheets="/css/home.css">
    <VBox prefHeight="181.0" prefWidth="222.0">
        <!-- Top Navigation Bar -->
        <HBox>
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header">






                <!-- Navigation Buttons -->
                <Button fx:id="accueilButton" styleClass="nav-button" text="Accueil" />
                <Button fx:id="produitsButton" styleClass="nav-button" text="Produits" />
                <Button fx:id="produitsDetailButton" styleClass="nav-button" text="Produits Detail" />
                <Button fx:id="parcelleButton" styleClass="nav-button" text="Parcelle" />
                <Button fx:id="offersButton" styleClass="nav-button" text="Offers" />
                <Button fx:id="masterfulButton" styleClass="featured-button" text="Masterful Agricole" />



                <!-- Auth Buttons -->
                <Button fx:id="loginButton" styleClass="auth-button" text="Login" />
                <Button fx:id="profileButton" styleClass="profile-button" text="My Profile" />
            </HBox>
        </HBox>
        <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Détails de l'Offre" />
            <GridPane hgap="10" vgap="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>

                <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="titreLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label prefHeight="18.0" prefWidth="152.0" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="descLabel" maxWidth="300" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Compétence:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="competenceLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="statutLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="editButton" text="Edit" onAction="#handleEditOffre" />
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteOffre" />
            </HBox>
        </children>
    </VBox>

    <!-- EMPLOYE TABLE -->
    <TableView fx:id="employeTable" prefHeight="200.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="user_identifierColumn" text="ID Employé" prefWidth="150.0" />
            <TableColumn fx:id="compColumn" text="Compétence" prefWidth="550.0" />
        </columns>
    </TableView>
</VBox>
