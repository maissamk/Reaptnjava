<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>


<VBox alignment="CENTER" prefHeight="600.0" prefWidth="789.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.FrontOffice.Offer.detailOffreController" stylesheets="/css/home.css">
    <VBox prefHeight="181.0" prefWidth="222.0">

        <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Détails de l'Offre" />
            <GridPane hgap="10" vgap="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>

                <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="titreLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label prefHeight="18.0" prefWidth="152.0" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="descLabel" maxWidth="300" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Compétence:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="competenceLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="statutLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="editButton" text="Edit" onAction="#handleEditOffre" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteOffre" style="-fx-background-color: #ff0000; -fx-text-fill: white;"/>
            </HBox>
        </children>
    </VBox>

    <!-- EMPLOYE TABLE -->
    <TableView fx:id="employeTable" prefHeight="200.0" prefWidth="1100.0">
        <columns>
            <TableColumn fx:id="user_identifierColumn" text="ID Employé" prefWidth="150.0" />
            <TableColumn fx:id="compColumn" text="Compétence" prefWidth="550.0" />
            <TableColumn fx:id="dispoColumn" text="Disponibilité" prefWidth="400.0" />
        </columns>
    </TableView>

    <!-- EMPLOYE INSCRIPTION -->



    <Label text="Postuler à cette offre" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="ID Utilisateur:" />
        <TextField fx:id="userIdField" promptText="Entrez votre identifiant..." />
    </HBox>

    <HBox spacing="10">
        <Label text="Compétence:" />
        <TextField fx:id="compField" promptText="Entrez votre compétence..." />
    </HBox>

    <Label text="Disponibilité:" style="-fx-font-size: 14px;" />

    <HBox spacing="10">
        <CheckBox fx:id="mondayCheckBox" text="Lundi" />
        <CheckBox fx:id="tuesdayCheckBox" text="Mardi" />
        <CheckBox fx:id="wednesdayCheckBox" text="Mercredi" />
        <CheckBox fx:id="thursdayCheckBox" text="Jeudi" />
        <CheckBox fx:id="fridayCheckBox" text="Vendredi" />
        <CheckBox fx:id="saturdayCheckBox" text="Samedi" />
        <CheckBox fx:id="sundayCheckBox" text="Dimanche" />
    </HBox>

    <Button text="Postuler" onAction="#handleAddEmploye"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    <Button text="Annuler votre inscription" onAction="#handleDeleteEmploye"
            style="-fx-background-color: #ff003b; -fx-text-fill: white;"/>

</VBox>
