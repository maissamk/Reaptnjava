<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.FrontOffice.material.client.ShowMaterielLocationController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f9f5;">

    <Label text="Détails du Matériel Agricole" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2e7d32; -fx-font-family: 'Segoe UI';"/>

    <ImageView fx:id="imageView" fitWidth="300" fitHeight="200" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);"/>

    <GridPane hgap="10" vgap="10" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #c8e6c9;">
        <columnConstraints>
            <ColumnConstraints prefWidth="100" halignment="RIGHT"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label fx:id="nomLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Prix/jour:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label fx:id="prixLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-text-fill: #388e3c; -fx-font-weight: bold;"/>

        <Label text="Disponibilité:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label fx:id="disponibiliteLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Date d'ajout:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Label fx:id="createdAtLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
    <TextArea fx:id="descriptionLabel" editable="false" wrapText="true"
              style="-fx-min-height: 100; -fx-background-color: white; -fx-border-color: #c8e6c9; -fx-background-radius: 5; -fx-border-radius: 5;"/>

    <VBox alignment="CENTER" style="-fx-padding: 10;">
        <Button fx:id="louer" mnemonicParsing="false" onAction="#louer"
                style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 5;"
                text="Louer">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Button>
    </VBox>
</VBox>